<Window x:Class="IvanovItog.App.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:props="clr-namespace:IvanovItog.App.Properties"
        Title="{x:Static props:Resources.Login_Title}"
        Height="320"
        Width="420"
        MinHeight="320"
        MinWidth="360"
        MaxHeight="480"
        MaxWidth="600"
        WindowStartupLocation="CenterScreen">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Border Margin="24"
                Padding="24"
                CornerRadius="12"
                Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MaxWidth="360">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Text="Вход"
                           FontSize="22"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,12" />
                <StackPanel Grid.Row="1"
                            Margin="0,0,0,12">
                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="Логин" FontWeight="SemiBold" />
                        <TextBox Margin="0,6,0,0"
                                 MinHeight="32"
                                 Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Введите логин" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Пароль" FontWeight="SemiBold" />
                        <PasswordBox Margin="0,6,0,0"
                                     MinHeight="32"
                                     x:Name="PasswordBox"
                                     PasswordChanged="OnPasswordChanged" />
                    </StackPanel>
                </StackPanel>
                <Button Grid.Row="2"
                        Content="Войти"
                        Command="{Binding LoginCommand}"
                        Height="40"
                        Margin="0,4,0,0"
                        FontWeight="SemiBold" />
            </Grid>
        </Border>
    </Grid>
</Window>
