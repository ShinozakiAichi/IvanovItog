<Window x:Class="IvanovItog.App.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:IvanovItog.App.Helpers"
        xmlns:props="clr-namespace:IvanovItog.App.Properties"
        Title="{x:Static props:Resources.Login_Title}"
        MaxHeight="540"
        MaxWidth="900"
        helpers:WindowSizeHelper.BindMinimumToContent="True"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#F4F6FB">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Margin="32"
                CornerRadius="20"
                Padding="36"
                Background="#1B4F8C">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="IvanovItog"
                           Foreground="White"
                           FontSize="28"
                           FontWeight="Bold" />
                <TextBlock Text="Система управления заявками"
                           Foreground="#E5ECF7"
                           FontSize="16"
                           Margin="0,12,0,24" />
                <TextBlock Text="Следите за заявками, распределяйте задачи и контролируйте качество обслуживания в едином окне."
                           Foreground="#C9D8F0"
                           TextWrapping="Wrap"
                           FontSize="14" />
            </StackPanel>
        </Border>

        <Border Grid.Column="1"
                Margin="32"
                Padding="40"
                Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                CornerRadius="20"
                BorderBrush="#E0E6F2"
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Добро пожаловать"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#1B4F8C" />
                <TextBlock Text="Введите свои учётные данные, чтобы продолжить работу"
                           Margin="0,6,0,24"
                           Foreground="#6B7280" />

                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Логин"
                               FontWeight="SemiBold"
                               Foreground="#111827" />
                    <TextBox Margin="0,6,0,0"
                             Height="40"
                             Padding="10"
                             Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Введите логин" />
                </StackPanel>

                <StackPanel Margin="0,0,0,24">
                    <TextBlock Text="Пароль"
                               FontWeight="SemiBold"
                               Foreground="#111827" />
                    <PasswordBox x:Name="PasswordBox"
                                 Margin="0,6,0,0"
                                 Height="40"
                                 Padding="10"
                                 PasswordChanged="OnPasswordChanged" />
                </StackPanel>

                <Button Content="Войти"
                        Height="44"
                        FontWeight="SemiBold"
                        Command="{Binding LoginCommand}" />

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,24,0,0">
                    <TextBlock Text="Нет аккаунта?"
                               Foreground="#6B7280" />
                    <Button Content="Создать"
                            Command="{Binding OpenRegistrationCommand}"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            FocusVisualStyle="{x:Null}"
                            Foreground="#1B4F8C"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Padding="0"
                            Margin="6,0,0,0" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
