<Window x:Class="IvanovItog.App.Views.RegistrationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация"
        Height="440"
        Width="420"
        MinHeight="400"
        MinWidth="380"
        WindowStartupLocation="CenterOwner">
    <Border Margin="24"
            Padding="24"
            CornerRadius="12"
            BorderBrush="#E0E6F2"
            BorderThickness="1"
            Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
        <StackPanel>
            <TextBlock Text="Создание аккаунта"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#1B4F8C" />
            <TextBlock Text="Введите данные нового пользователя"
                       Margin="0,6,0,16"
                       Foreground="#6B7280" />

            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Логин" FontWeight="SemiBold" />
                <TextBox Margin="0,6,0,0"
                         MinHeight="34"
                         Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Имя пользователя" FontWeight="SemiBold" />
                <TextBox Margin="0,6,0,0"
                         MinHeight="34"
                         Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Пароль" FontWeight="SemiBold" />
                <PasswordBox x:Name="PasswordBox"
                             Margin="0,6,0,0"
                             MinHeight="34"
                             PasswordChanged="OnPasswordChanged" />
            </StackPanel>

            <StackPanel Margin="0,0,0,16">
                <TextBlock Text="Повторите пароль" FontWeight="SemiBold" />
                <PasswordBox x:Name="ConfirmPasswordBox"
                             Margin="0,6,0,0"
                             MinHeight="34"
                             PasswordChanged="OnConfirmPasswordChanged" />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Spacing="12">
                <Button Content="Отмена"
                        Width="100"
                        Height="34"
                        Command="{Binding CancelCommand}" />
                <Button Content="Создать"
                        Width="140"
                        Height="34"
                        Command="{Binding RegisterCommand}" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
