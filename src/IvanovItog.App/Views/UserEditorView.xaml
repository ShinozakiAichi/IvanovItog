<Window x:Class="IvanovItog.App.Views.UserEditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:IvanovItog.App.Helpers"
        Title="{Binding Title}"
        Height="500"
        Width="420"
        MinHeight="460"
        MinWidth="380"
        WindowStartupLocation="CenterOwner">
    <Border Margin="24"
            Padding="24"
            CornerRadius="12"
            BorderBrush="#E0E6F2"
            BorderThickness="1"
            Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
        <StackPanel>
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Логин" FontWeight="SemiBold" />
                <TextBox Margin="0,6,0,0"
                         MinHeight="34"
                         Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Имя пользователя" FontWeight="SemiBold" />
                <TextBox Margin="0,6,0,0"
                         MinHeight="34"
                         Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Роль" FontWeight="SemiBold" />
                <ComboBox Margin="0,6,0,0"
                          MinHeight="34"
                          ItemsSource="{Binding Roles}"
                          SelectedItem="{Binding SelectedRole}" />
            </StackPanel>

            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Пароль" FontWeight="SemiBold" />
                <PasswordBox x:Name="PasswordBox"
                             Margin="0,6,0,0"
                             MinHeight="34"
                             PasswordChanged="OnPasswordChanged" />
            </StackPanel>

            <StackPanel Margin="0,0,0,16">
                <TextBlock Text="Повторите пароль" FontWeight="SemiBold" />
                <PasswordBox x:Name="ConfirmPasswordBox"
                             Margin="0,6,0,0"
                             MinHeight="34"
                             PasswordChanged="OnConfirmPasswordChanged" />
                <TextBlock Text="При редактировании оставьте поля пустыми, если пароль не нужно менять"
                           FontSize="11"
                           Foreground="#6B7280"
                           Margin="0,8,0,0"
                           TextWrapping="Wrap" />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        helpers:StackPanelEx.Spacing="12">
                <Button Content="Отмена"
                        Width="100"
                        Height="34"
                        Command="{Binding CancelCommand}" />
                <Button Content="Сохранить"
                        Width="140"
                        Height="34"
                        Command="{Binding SaveCommand}" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
