<Window x:Class="IvanovItog.App.Views.RequestEditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:props="clr-namespace:IvanovItog.App.Properties"
        Title="{x:Static props:Resources.RequestEditor_Title}"
        Height="400"
        Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20" RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Название" />
        <TextBox Grid.Row="1" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock Grid.Row="2" Text="Описание" />
        <TextBox Grid.Row="3" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="120" TextWrapping="Wrap" />
        <StackPanel Grid.Row="4" Orientation="Horizontal" Spacing="10">
            <StackPanel Width="140">
                <TextBlock Text="Категория" />
                <ComboBox ItemsSource="{Binding Categories}" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedValue="{Binding CategoryId}" />
            </StackPanel>
            <StackPanel Width="140">
                <TextBlock Text="Статус" />
                <ComboBox ItemsSource="{Binding Statuses}" DisplayMemberPath="Name" SelectedValuePath="Id" SelectedValue="{Binding StatusId}" />
            </StackPanel>
            <StackPanel Width="120">
                <TextBlock Text="Приоритет" />
                <ComboBox ItemsSource="{Binding Priorities}" SelectedValue="{Binding Priority}" />
            </StackPanel>
        </StackPanel>
        <Button Grid.Row="5" Content="Сохранить" Command="{Binding SaveCommand}" Height="40" />
    </Grid>
</Window>
