<Window x:Class="IvanovItog.App.Views.RequestEditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:IvanovItog.App.Helpers"
        xmlns:props="clr-namespace:IvanovItog.App.Properties"
        Title="{x:Static props:Resources.RequestEditor_Title}"
        Height="460"
        Width="560"
        MinHeight="420"
        MinWidth="520"
        MaxHeight="620"
        MaxWidth="720"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Название" Grid.Row="0" Grid.Column="0" Margin="0,0,12,0" VerticalAlignment="Center" />
            <TextBox Grid.Row="0"
                     Grid.Column="1"
                     MinHeight="32"
                     Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,12,12,0" Text="Описание" VerticalAlignment="Top" />
            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     Margin="0,12,0,0"
                     Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     MinHeight="120" />
            <WrapPanel Grid.Row="2"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Margin="0,16,0,0"
                       ItemWidth="220"
                       ItemHeight="88">
                <StackPanel Width="220" Margin="0,0,12,12">
                    <TextBlock Text="Категория" />
                    <ComboBox Margin="0,6,0,0"
                              ItemsSource="{Binding Categories}"
                              DisplayMemberPath="Name"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding CategoryId}" />
                </StackPanel>
                <StackPanel Width="220" Margin="0,0,12,12">
                    <TextBlock Text="Статус" />
                    <ComboBox Margin="0,6,0,0"
                              ItemsSource="{Binding Statuses}"
                              DisplayMemberPath="Name"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding StatusId}" />
                </StackPanel>
                <StackPanel Width="220" Margin="0,0,12,12">
                    <TextBlock Text="Приоритет" />
                    <ComboBox Margin="0,6,0,0"
                              ItemsSource="{Binding Priorities}"
                              SelectedValue="{Binding Priority}" />
                </StackPanel>
            </WrapPanel>
        </Grid>
        <Border Grid.Row="1"
                CornerRadius="8"
                BorderBrush="#FFE0E6F0"
                BorderThickness="1"
                Padding="16"
                Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
            <TextBlock Text="Проверьте корректность данных перед сохранением"
                       Foreground="#FF5A6A8A"
                       TextWrapping="Wrap"
                       FontStyle="Italic" />
        </Border>
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0"
                    helpers:StackPanelEx.Spacing="12">
            <Button Content="Отмена"
                    Width="120"
                    Height="40"
                    IsCancel="True" />
            <Button Content="Сохранить"
                    Width="140"
                    Height="40"
                    Command="{Binding SaveCommand}"
                    FontWeight="SemiBold"
                    IsDefault="True" />
        </StackPanel>
    </Grid>
</Window>
