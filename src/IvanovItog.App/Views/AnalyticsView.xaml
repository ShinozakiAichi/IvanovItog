<Window x:Class="IvanovItog.App.Views.AnalyticsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:props="clr-namespace:IvanovItog.App.Properties"
        Title="{x:Static props:Resources.Analytics_Title}"
        Height="640"
        Width="1040"
        MinHeight="620"
        MinWidth="960"
        MaxHeight="900"
        MaxWidth="1600"
        Loaded="OnLoaded"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Padding="16"
                CornerRadius="8"
                BorderBrush="#FFD0D7E2"
                BorderThickness="1"
                Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal">
                <StackPanel Width="180" Margin="0,0,12,0">
                    <TextBlock Text="Дата с" />
                    <DatePicker Margin="0,6,0,0" SelectedDate="{Binding From}" />
                </StackPanel>
                <StackPanel Width="180" Margin="0,0,12,0">
                    <TextBlock Text="Дата по" />
                    <DatePicker Margin="0,6,0,0" SelectedDate="{Binding To}" />
                </StackPanel>
                <Button Content="Обновить"
                        Width="140"
                        Margin="0,22,0,0"
                        Height="36"
                        Command="{Binding LoadCommand}" />
            </StackPanel>
        </Border>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border Padding="12"
                    CornerRadius="8"
                    BorderBrush="#FFE0E6F0"
                    BorderThickness="1"
                    Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                    Margin="0,0,8,0">
                <lvc:PieChart Series="{Binding StatusSeries}" LegendPosition="Right" />
            </Border>
            <Border Grid.Column="1"
                    Padding="12"
                    CornerRadius="8"
                    BorderBrush="#FFE0E6F0"
                    BorderThickness="1"
                    Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                    Margin="8,0,0,0">
                <lvc:CartesianChart Series="{Binding TimelineSeries}" XAxes="{Binding TimelineXAxis}" />
            </Border>
        </Grid>
        <Border Grid.Row="2"
                Padding="12"
                CornerRadius="8"
                BorderBrush="#FFE0E6F0"
                BorderThickness="1"
                Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                Margin="0,16,0,0">
            <lvc:CartesianChart Series="{Binding LoadSeries}" XAxes="{Binding LoadXAxis}" />
        </Border>
    </Grid>
</Window>
