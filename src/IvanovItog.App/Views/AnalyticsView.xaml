<Window x:Class="IvanovItog.App.Views.AnalyticsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="https://github.com/beto-rodriguez/LiveCharts2"
        xmlns:props="clr-namespace:IvanovItog.App.Properties"
        Title="{x:Static props:Resources.Analytics_Title}"
        Height="600"
        Width="900"
        Loaded="OnLoaded"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10" RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Spacing="10">
            <DatePicker SelectedDate="{Binding From}" />
            <DatePicker SelectedDate="{Binding To}" />
            <Button Content="Обновить" Command="{Binding LoadCommand}" />
        </StackPanel>
        <Grid Grid.Row="1" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <lvc:PieChart Series="{Binding StatusSeries}" LegendPosition="Right" />
            <lvc:CartesianChart Grid.Column="1"
                                 Series="{Binding TimelineSeries}"
                                 XAxes="{Binding TimelineXAxis}" />
        </Grid>
        <lvc:CartesianChart Grid.Row="2" Series="{Binding LoadSeries}" XAxes="{Binding LoadXAxis}" />
    </Grid>
</Window>
